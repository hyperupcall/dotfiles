{
	"shellcheck.ignorePatterns": {
		"**/*.z*": true,
		"**/.tcshrc": true,
		"**/.cshrc": true,
		"**/.git": true
	},
	"files.associations": {
		"**/i3/**": "i3",
		"**/polybar/**": "ini"
	},
	"css.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"esbonio.server.enabled": true,
	"search.exclude": {
		"**/.home/**": true
	},
	"commentAnchors.workspace.excludeFiles": "**/{.git,.home}/**"
}
