[init]
	defaultBranch = main
[hub]
	protocol = ssh
	reportCrash = never
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive
[commit]
	gpgSign = true
	template = ~/.config/git/templates/commit
[gpg]
	program = gpg ; default
	format = openpgp ; default
[help]
	autoCorrect = 20
[rerere]
	enabled = true
[rebase]
	stat = true
[status]
	showStash = true
	showUntrackedFiles = all
	# submoduleSummary = true # Performance issues on Windows
