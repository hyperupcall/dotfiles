root = true

[*]
indent_style = tab
indent_size = unset
tab_width = 3
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{GNUmakefile,Makefile,makefile,*.mk}]
indent_style = tab

[*.{yaml,yml}]
indent_style = space

[*.{diff,md,snap}]
trim_trailing_whitespace = false

[*.nim]
indent_style = space
tab_width = 2

[*.md]
tab_width = 2
