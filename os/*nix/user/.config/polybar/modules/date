[module/date]
type = internal/date
interval = ${common.interval}

; details: https://en.cppreference.com/w/cpp/io/manip/put_time
; if you want to use syntax tags here you need to use %%{...}
date = %Y-%m-%d%
time = %H:%M

; toggles format on click
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
