{
	"window.customMenuBarAltFocus": false,
	"window.menuBarVisibility": "visible",
	"window.newWindowDimensions": "maximized",
	"window.restoreWindows": "all",
	"window.title": "ðŸ¦Š ${folderName} ${activeEditorLong}${separator}${remoteName}",
	"window.titleBarStyle": "custom",

	// EDITOR
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.codeActionsOnSave": {
		"source.fixAll.shellcheck": false
	},
	"editor.codeLens": false,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorSurroundingLinesStyle": "all",
	"editor.find.addExtraSpaceOnTop": false,
	"editor.fontFamily": "'Droid Sans Mono', 'Fira Sans Mono', 'monospace'",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": false,
	"editor.formatOnType": false,
	"editor.insertSpaces": false,
	"editor.inlineSuggest.enabled": true,
	"editor.maxTokenizationLineLength": 5000,
	"editor.minimap.maxColumn": 35,
	"editor.minimap.renderCharacters": false,
	"editor.minimap.showSlider": "always",
	"editor.minimap.side": "left",
	"editor.renderWhitespace": "all",
	"editor.smoothScrolling": true,
	"editor.suggestSelection": "recentlyUsedByPrefix",
	"editor.tabSize": 3,
	"editor.unfoldOnClickAfterEndOfLine": true,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 100,
	"editor.wrappingIndent": "indent",

	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 5000,
	"files.associations": {
		"*.hbs": "html",
		"*.rasi": "css",
		"Vagrantfile": "ruby",
		"**/i3/config": "i3",
		"Xresources": "xdefaults",
		"*.html": "html",
		"*.bbmodel": "json",
		"*.jscript": "java",
		"*.sublime-snippet": "xml"
	},
	"files.eol": "\n",
	"files.exclude": {
		"**/.git": false,
		"**/.hg": false,
		"**/.fossil": false,
		"**/.svn": false,
		"**/.classpath": false,
		"**/.project": false,
		"**/.settings": false,
		"**/.factorypath": false
	},
	"files.insertFinalNewline": true,
	"files.maxMemoryForLargeFilesMB": 2048,
	"files.participants.timeout": 2000,
	"files.simpleDialog.enable": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.watcherExclude": {
		"**/.ammonite": true,
		"**/.bloop": true,
		"**/.metals": true,
		"**/bower_components/**": true,
		"**/linux/**": true,
		"**/rootfs/**": true
	},

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.incrementalNaming": "smart",
	"explorer.openEditors.visible": 0,

	"search.exclude": {
		"**/.git": true,
		"**/.hg": true,
		"**/.fossil": true,
		"**/.svn": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true,
		"**/yarn.lock": true,
		"**/.hidden/": true,
		"**/bake": true
	},
	"search.searchOnTypeDebouncePeriod": 200,
	"search.showLineNumbers": true,
	"search.smartCase": true,

	"workbench.activityBar.visible": true,
	"workbench.colorTheme": "Night Owl",
	"workbench.commandPalette.history": 100,
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editorAssociations": {
		"*.jpg": "luna.editor",
		"*.png": "luna.editor",
		"*.ipynb": "jupyter-notebook",
		"*.ico": "luna.editor"
	},
	"workbench.enableExperiments": false,
	"workbench.iconTheme": "Monokai Pro Icons",
	"workbench.quickOpen.closeOnFocusLost": false,
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.tree.indent": 12,

	"update.mode": "manual",

	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",

	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"typescript.implementationsCodeLens.enabled": true,
	"typescript.referencesCodeLens.enabled": true,
	"typescript.referencesCodeLens.showOnAllFunctions": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[handlebars]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"css.validate": false,
	"[less]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"less.validate": false,
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"scss.validate": false,
	"[graphql]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.trimTrailingWhitespace": false
	},
	"[markdown-math]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.trimTrailingWhitespace": false
	},
	"[juliamarkdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.trimTrailingWhitespace": false
	},
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.python",
		"editor.codeActionsOnSave": {
			"source.fixAll": true,
			"source.organizeImports": true
		}
	},
	"python.formatting.provider": "yapf",
	"python.globalModuleInstallation": false,
	"python.venvPath": "~/.cache/pypoetry/virtualenvs",
	"python.languageServer": "Pylance",
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, ColumnLimit: 120, AllowShortFunctionsOnASingleLine: None}",
	"C_Cpp.clang_format_sortIncludes": true,
	"clang-tidy.checks": [
		"bugprone-*",
		"cert-*",
		"clang-analyzer-*",
		"concurrency-*",
		"-concurrency-mt-unsafe",
		"cppcoreguidelines-*",
		"-cppcoreguidelines-avoid-c-arrays",
		"-cppcoreguidelines-avoid-magic-numbers",
		"google-*",
		"-google-readability-todo",
		"-google-runtime-references",
		"-google-readability-braces-around-statements",
		"misc-*",
		"modernize-*",
		"-modernize-avoid-c-arrays",
		"-modernize-use-trailing-return-type",
		"performance-*",
		"portability-*",
		"readability-*",
		"-readability-magic-numbers",
		"-readability-braces-around-statements"
	],
	"[java]": {
		"editor.defaultFormatter": "redhat.java"
	},
	"java.configuration.checkProjectSettingsExclusions": false,
	"java.project.importOnFirstTimeStartup": "automatic",
	"[perl]": {
		"editor.defaultFormatter": "richterger.perl"
	},
	"perl.disableCache": true, // TODO: BUGGED
	"perl.cacheDir": "/home/edwin/.cache/vscode-perl-cache/",

	// UNSORTED
	"comment-divider.length": 60,
	"cSpell.diagnosticLevel": "Hint",
	"cSpell.userWords": [
		"cmds",
		"dirent",
		"dirents",
		"dotfile",
		"dotfiles",
		"editorconfig",
		"entrypoint",
		"entrypoints",
		"eval",
		"gitattributes",
		"godotenv",
		"gulpfile",
		"healthcheck",
		"kbuild",
		"Kofler",
		"mongod",
		"NOLINT",
		"prettierrc",
		"printk",
		"Roadmap",
		"subdependencies",
		"templating",
		"wasm",
		"wasmtime"
	],
	"debug.node.autoAttach": "on",
	"diffEditor.ignoreTrimWhitespace": false,
	"emmet.excludeLanguages": ["markdown", "c"],
	"emmet.includeLanguages": {
		"vue-html": "html"
	},
	"git.alwaysShowStagedChangesResourceGroup": true,
	"gitlens.advanced.maxListItems": 300,
	"gitlens.advanced.maxSearchItems": 300,
	"gitlens.codeLens.includeSingleLineSymbols": true,
	"html.autoClosingTags": false,
	"html.format.enable": false,
	"html.format.wrapLineLength": 0,
	"javascript.referencesCodeLens.enabled": true,
	"javascript.referencesCodeLens.showOnAllFunctions": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"merge-conflict.autoNavigateNextConflict.enabled": true,
	"merge-conflict.diffViewPosition": "Beside",
	"screencastMode.onlyKeyboardShortcuts": true,
	"sortLines.filterBlankLines": true,
	"sortLines.sortEntireFile": true,
	"sqltools.useNodeRuntime": true,
	"task.quickOpen.history": 20,
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.commandsToSkipShell": [
		"-workbench.action.terminal.focusFind",
		"-workbench.action.quickOpen"
	],
	"vim.enableNeovim": true,
	"vsdocker.imageUser": "docker.io/hyperupcall",
	"yaml.format.printWidth": 100,
	"yaml.format.singleQuote": true,
	"zenMode.centerLayout": true,
	"go.toolsManagement.autoUpdate": true,
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": true,
		"markdown": true
	},
	"vsicons.presets.foldersAllDefaultIcon": true,

	// telemetry / extraneous notifications / unecessary views
	"telemetry.telemetryLevel": "off",
	"redhat.telemetry.enabled": false,
	"julia.enableTelemetry": false,
	"terraform.telemetry.enabled": false,
	"sonarlint.disableTelemetry": true,
	"vsicons.dontShowNewVersionMessage": true,
	"kite.showWelcomeNotificationOnStartup": false,
	"gitlens.showWelcomeOnInstall": false,
	"java.help.firstView": "none",
	"java.help.showReleaseNotes": false,
	"window.zoomLevel": -1
}
