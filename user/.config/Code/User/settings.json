{
	"window.customMenuBarAltFocus": false,
	"window.menuBarVisibility": "visible",
	"window.newWindowDimensions": "maximized",
	"window.restoreWindows": "all",
	"window.title": "ðŸ¦Š ${folderName} ${activeEditorLong}${separator}${remoteName}",
	"window.titleBarStyle": "custom",

	// EDITOR
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.codeActionsOnSave": {
		"source.fixAll.shellcheck": false
	},
	"editor.codeLens": true,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorSurroundingLinesStyle": "all",
	"editor.detectIndentation": true,
	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.autoFindInSelection": "multiline",
	"editor.fontFamily": "'Droid Sans Mono', 'Fira Sans Mono', 'monospace'",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	"editor.insertSpaces": false,
	"editor.inlineSuggest.enabled": true,
	"editor.maxTokenizationLineLength": 5000,
	"editor.minimap.maxColumn": 35,
	"editor.minimap.renderCharacters": false,
	"editor.minimap.showSlider": "always",
	"editor.minimap.side": "left",
	"editor.renderWhitespace": "all",
	"editor.smoothScrolling": true,
	"editor.suggestSelection": "recentlyUsedByPrefix",
	"editor.tabSize": 3,
	"editor.unfoldOnClickAfterEndOfLine": true,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 100,
	"editor.wrappingIndent": "indent",

	"terminal.integrated.altClickMovesCursor": false,
	"terminal.integrated.commandsToSkipShell": [
		"-workbench.action.terminal.focusFind",
		"-workbench.action.quickOpen",
		"language-julia.interrupt"
	],
	"terminal.integrated.allowChords": false,
	"terminal.integrated.copyOnSelection": false,
	"terminal.integrated.environmentChangesIndicator": "on",
	"terminal.integrated.inheritEnv": false,
	"terminal.integrated.showExitAlert": false,

	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 5000,
	"files.associations": {
		"*.hbs": "html",
		"*.rasi": "css",
		"Vagrantfile": "ruby",
		"**/i3/config": "i3",
		"Xresources": "xdefaults",
		"*.html": "html",
		"*.bbmodel": "json",
		"*.jscript": "java",
		"*.sublime-snippet": "xml"
	},
	// "files.eol": "\n",
	"files.exclude": {
		"**/.git": false,
		"**/.hg": false,
		"**/.fossil": false,
		"**/.svn": false,
		"**/CVS": false
	},
	// "files.insertFinalNewline": true,
	"files.maxMemoryForLargeFilesMB": 2048,
	"files.participants.timeout": 2000,
	"files.simpleDialog.enable": true,
	// "files.trimFinalNewlines": true, // Enabling this and similar breaks EditorConfig
	// "files.trimTrailingWhitespace": true,
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/web_modules/**": true,
		"**/jspm_modules/**": true,
		"**/bower_components/**": true,
		"**/linux/**": true,
		"**/rootfs/**": true
	},

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.incrementalNaming": "smart",
	"explorer.openEditors.visible": 0,

	"search.exclude": {
		"**/.git": true,
		"**/.hg": true,
		"**/.fossil": true,
		"**/.svn": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true,
		"**/yarn.lock": true,
		"**/.hidden/": true,
		"**/.hooks/.hookah": true,
		"**/bake": true
	},
	"search.searchOnTypeDebouncePeriod": 200,
	"search.showLineNumbers": true,
	"search.smartCase": true,

	"workbench.activityBar.visible": true,
	"workbench.commandPalette.history": 100,
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editorAssociations": {
		"*.jpg": "luna.editor",
		"*.png": "luna.editor",
		"*.ipynb": "jupyter-notebook",
		"*.ico": "luna.editor"
	},
	"workbench.enableExperiments": false,
	"workbench.iconTheme": "vscode-icons",
	"workbench.quickOpen.closeOnFocusLost": false,
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.tree.indent": 12,
	"workbench.welcomePage.walkthroughs.openOnInstall": false,
	"update.mode": "manual",

	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",

	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"typescript.implementationsCodeLens.enabled": true,
	"typescript.referencesCodeLens.enabled": true,
	"typescript.referencesCodeLens.showOnAllFunctions": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"deno.suggest.imports.hosts": {
		"https://deno.land": true
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[jsonnet]": {
		"editor.defaultFormatter": "Sebbia.jsonnetng",
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"html.format.enable": false,
	"html.format.wrapLineLength": 0,
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[handlebars]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"css.validate": false,
	"[less]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"less.validate": false,
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"scss.validate": false,
	"[graphql]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[markdown-math]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[juliamarkdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"markdownlint.run": "onSave",
	"markdownlint.focusMode": true,
	"markdownlint.config": {
		"first-heading-h1": false,
		"first-line-heading": false,
		"no-bare-urls": false,
		"no-duplicate-header": false,
		"no-hard-tabs": false,
		"no-inline-html": false,
		"ol-prefix": false
	},
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"yaml.format.printWidth": 100,
	"yaml.format.singleQuote": true,
	"[python]": {
		"editor.defaultFormatter": "ms-python.python",
		"editor.codeActionsOnSave": {
			"source.fixAll": true,
			"source.organizeImports": true
		}
	},
	"python.formatting.provider": "yapf",
	"python.globalModuleInstallation": false,
	"python.venvPath": "~/.cache/pypoetry/virtualenvs",
	"python.languageServer": "Pylance",
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, AlignEscapedNewlines: Left, AllowShortFunctionsOnASingleLine: Empty, AlwaysBreakTemplateDeclarations: Yes, ColumnLimit: 120 }",
	"C_Cpp.clang_format_sortIncludes": true,
	"clang-tidy.checks": [
		"bugprone-*",
		"-bugprone-easily-swappable-parameters",
		"cert-*",
		"clang-analyzer-*",
		"-clang-analyzer-security.insecureAPI.DeprecatedOrUnsafeBufferHandling",
		"-clang-analyzer-deadcode.DeadStores",
		"concurrency-*",
		"-concurrency-mt-unsafe",
		"cppcoreguidelines-*",
		"-cppcoreguidelines-avoid-c-arrays",
		"-cppcoreguidelines-avoid-magic-numbers",
		"-cppcoreguidelines-avoid-non-const-global-variables",
		"-cppcoreguidelines-macro-usage",
		"-cppcoreguidelines-owning-memory",
		"-cppcoreguidelines-pro-bounds-pointer-arithmetic",
		"-cppcoreguidelines-pro-bounds-array-to-pointer-decay",
		"google-*",
		"-google-readability-braces-around-statements",
		"-google-readability-todo",
		"-google-runtime-references",
		"misc-*",
		"modernize-*",
		"-modernize-avoid-c-arrays",
		"-modernize-use-trailing-return-type",
		"performance-*",
		"portability-*",
		"readability-*",
		"-readability-braces-around-statements",
		"-readability-convert-member-functions-to-static",
		"-readability-else-after-return",
		"-readability-identifier-length",
		"-readability-isolate-declaration",
		"-readability-magic-numbers"
	],
	"[java]": {
		"editor.defaultFormatter": "redhat.java"
	},
	"java.project.importOnFirstTimeStartup": "automatic",
	"[perl]": {
		"editor.defaultFormatter": "richterger.perl"
	},
	// richterger.perl
	"perl.disableCache": false, // If this is 'false', then 'perl.cacheDir' is used
	"perl.cacheDir": "/home/edwin/.cache/vscode-perl-cache/",
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"[rust]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "rust-lang.rust"
	},

	// telemetry / extraneous notifications / unnecessary views
	"telemetry.telemetryLevel": "off",
	"redhat.telemetry.enabled": false,
	"julia.enableTelemetry": false,
	"terraform.telemetry.enabled": false,
	"sonarlint.disableTelemetry": true,
	"vsicons.dontShowNewVersionMessage": true,
	"kite.showWelcomeNotificationOnStartup": false,
	"gitlens.showWelcomeOnInstall": false,
	"java.help.firstView": "none",
	"java.help.showReleaseNotes": false,
	"gitlens.showWhatsNewAfterUpgrades": false,
	"update.showReleaseNotes": false,
	"material-icon-theme.showWelcomeMessage": false,
	"docker-explorer.enableTelemetry": false,

	// UNSORTED

	"comment-divider.length": 60,
	"cSpell.diagnosticLevel": "Hint",
	"cSpell.userWords": [
		"cmds",
		"Cygwin",
		"Deno",
		"dirent",
		"dirents",
		"dotfile",
		"dotfiles",
		"dotmgr",
		"editorconfig",
		"entrypoint",
		"entrypoints",
		"eval",
		"gitattributes",
		"godotenv",
		"gulpfile",
		"healthcheck",
		"hyperupcall",
		"kbuild",
		"Kofler",
		"mkdir",
		"mongod",
		"NOLINT",
		"NOLINTNEXTLINE",
		"prettierrc",
		"printk",
		"Roadmap",
		"selectability",
		"shelltest",
		"subdependencies",
		"subshells",
		"templating",
		"tput",
		"UEFI",
		"wasm",
		"wasmtime"
	],
	"debug.node.autoAttach": "on",
	"diffEditor.ignoreTrimWhitespace": false,
	"emmet.excludeLanguages": ["markdown", "c"],
	"emmet.includeLanguages": {
		"vue-html": "html"
	},
	"git.alwaysShowStagedChangesResourceGroup": true,
	"gitlens.advanced.maxListItems": 300,
	"gitlens.advanced.maxSearchItems": 300,
	"gitlens.codeLens.includeSingleLineSymbols": true,
	"javascript.referencesCodeLens.enabled": true,
	"javascript.referencesCodeLens.showOnAllFunctions": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"merge-conflict.autoNavigateNextConflict.enabled": true,
	"merge-conflict.diffViewPosition": "Beside",
	"screencastMode.onlyKeyboardShortcuts": true,
	"sortLines.filterBlankLines": true,
	"sortLines.sortEntireFile": true,
	"sqltools.useNodeRuntime": true,
	"task.quickOpen.history": 20,
	"vsicons.associations.files": [
		{
			"icon": "shell",
			"extensions": ["bake"],
			"filename": true,
			"format": "svg"
		}
	],
	"vim.enableNeovim": true,
	"vsdocker.imageUser": "docker.io/hyperupcall",
	"esbonio.server.enabled": false,
	"zenMode.centerLayout": true,
	"go.toolsManagement.autoUpdate": true,
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": true,
		"markdown": true
	},
	"git.enableCommitSigning": true,
	"workbench.colorTheme": "SynthWave '84",
	"extensions.ignoreRecommendations": true,
	"julia.symbolCacheDownload": true,
	"gitlens.codeLens.enabled": false,
	"cmake.configureOnOpen": true,
	"warmUp.changeCount": "15",
	"warmUp.switchProgrammingLanguage": "javascript",
	"window.zoomLevel": -1,
	"terminal.integrated.defaultProfile.linux": "bash"
}