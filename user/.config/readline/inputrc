$include /etc/inputrc

set bell-style none
set bind-tty-special-chars off
set blink-matching-paren off
set colored-completion-prefix on
set colored-stats on
set completion-ignore-case on
set completion-map-case on
set completion-prefix-display-length 12
set completion-query-items 100
set convert-meta off
set echo-control-characters off
set input-meta on
set mark-symlinked-directories on
set match-hidden-files off
set revert-all-at-newline on
set show-all-if-ambiguous on
set show-all-if-unmodified on
set skip-completed-text on
set output-meta on
set visible-stats on

"\C- r": re-read-init-file
"\C- p": previous-screen-line
"\C- n": next-screen-line
"\C- w": redraw-current-line
"\C- r": reverse-search-history
"\C- s": forward-search-history
"\C- p": print-last-kbd-macro

"C-w": backward-kill-word

"\eq": menu-complete
"\ew": menu-complete
"\e;": redraw-current-line

# Typing !!<space> will replace the !! with your last command
# Space: magic-space

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word


$if mode=vi
	set keymap vi-command
	"gg": beginning-of-history
	"G": end-of-history

	set keymap vi-insert
	"jj": vi-movement-mode
	"\C-p": history-search-backward
	Control-l: clear-screen

	TAB: menu-complete
	"\e[Z": menu-complete-backward
$endif
